<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lyt_recycler_item_lista"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:paddingTop="5dp">

    <ImageView
        android:id="@+id/img_adicionar"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerInParent="true"
        android:src="@drawable/ic_add_circle_gray_24dp" />

    <TextView
        android:id="@+id/txt_descricao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/txt_quantidade"
        android:layout_toRightOf="@+id/img_adicionar"
        android:textSize="12sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_saldo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_descricao"
        android:layout_toLeftOf="@+id/txt_quantidade"
        android:layout_toRightOf="@+id/img_adicionar"
        android:textSize="14sp"
        android:text="Saldo:123"/>

    <TextView
        android:id="@+id/txt_custo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_saldo"
        android:layout_toLeftOf="@+id/txt_quantidade"
        android:layout_toRightOf="@+id/img_adicionar"
        android:textSize="14sp"
        android:gravity="center_vertical|right"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:layout_below="@+id/txt_custo"
        android:layout_toRightOf="@+id/img_adicionar"
        android:background="@android:color/darker_gray" />

    <TextView
        android:id="@+id/txt_quantidade"
        android:layout_width="35dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_descricao"
        android:layout_centerInParent="true"
        android:layout_toLeftOf="@+id/img_excluir"
        android:gravity="center"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/img_excluir"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:src="@drawable/ic_clear_red_24dp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/txt_acao"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:text="Adicionado"
        android:textSize="8dp"
        android:visibility="invisible" />

</RelativeLayout>