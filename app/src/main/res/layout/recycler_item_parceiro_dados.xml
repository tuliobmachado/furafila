<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_parceiro"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <FrameLayout
        android:id="@+id/frm_status"
        android:layout_width="4dp"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_descricao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_labelNomeFant"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nome Fantasia : " />

            <TextView
                android:id="@+id/txt_nome_fantasia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_labelcodigo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Código               : " />

            <TextView
                android:id="@+id/txt_codigo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_labelcpfcgc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CNPJ/CPF         : " />

            <TextView
                android:id="@+id/txt_cpfcgc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_dadosendereco"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dados Endereço"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_labelrua"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rua       : " />

            <TextView
                android:id="@+id/txt_rua"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5sp"
                android:text="Rua ab por ter" />

            <TextView
                android:id="@+id/txt_labelnumero"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nº: " />

            <TextView
                android:id="@+id/txt_numero"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="999" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_labelbairro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bairro   : " />


            <TextView
                android:id="@+id/txt_bairro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bairro" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_labelcidade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cidade : " />

            <TextView
                android:id="@+id/txt_cidade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5sp"
                android:text="Cidade" />

            <TextView
                android:id="@+id/txt_label_uf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="UF : " />

            <TextView
                android:id="@+id/txt_uf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="UF" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_labelcep"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CEP      : " />

            <TextView
                android:id="@+id/txt_cep"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CEP" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_dados_contato"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dados Contato"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_labeltel1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tel1   : " />

            <TextView
                android:id="@+id/txt_tel1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="tel1" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_labeltel2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tel2   : " />

            <TextView
                android:id="@+id/txt_tel2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="tel2" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_labelemail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email : " />


            <TextView
                android:id="@+id/txt_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="email" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_labelcampolivrea3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Obs1 : " />


            <TextView
                android:id="@+id/txt_campolivrea3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CampoLivreA3" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_labelcampolivrea4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Obs2 : " />


            <TextView
                android:id="@+id/txt_campolivrea4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CampoLivreA4" />

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>